set -e

MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$(cd "$(dirname "$0")"; pwd -P)}"
WRAPPER_DIR="$MAVEN_PROJECTBASEDIR/.mvn/wrapper"
WRAPPER_JAR="$WRAPPER_DIR/maven-wrapper.jar"
WRAPPER_PROPERTIES="$WRAPPER_DIR/maven-wrapper.properties"

if [ ! -f "$WRAPPER_PROPERTIES" ]; then
  echo "Missing $WRAPPER_PROPERTIES"
  exit 1
fi

# Load properties
distributionUrl=$(sed -n -e 's/^distributionUrl=//p' "$WRAPPER_PROPERTIES")
wrapperUrl=$(sed -n -e 's/^wrapperUrl=//p' "$WRAPPER_PROPERTIES")

download() {
  url="$1"
  dest="$2"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL "$url" -o "$dest"
  elif command -v wget >/dev/null 2>&1; then
    wget -q "$url" -O "$dest"
  else
    echo "ERROR: curl or wget required to download $url"
    exit 1
  fi
}

# Ensure wrapper jar present (download if missing)
if [ ! -f "$WRAPPER_JAR" ]; then
  mkdir -p "$WRAPPER_DIR"
  echo "Downloading Maven Wrapper jar..."
  download "$wrapperUrl" "$WRAPPER_JAR"
fi

# Set JVM args if provided
MAVEN_JAVA_EXE="${JAVA_HOME:+$JAVA_HOME/bin/}java"
if [ ! -x "$MAVEN_JAVA_EXE" ]; then
  MAVEN_JAVA_EXE="java"
fi

exec "$MAVEN_JAVA_EXE" \
  $MAVEN_OPTS \
  -classpath "$WRAPPER_JAR" \
  org.apache.maven.wrapper.MavenWrapperMain \
  -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" \
  -Dmaven.home="$MAVEN_HOME" \
  -DwrapperUrl="$wrapperUrl" \
  -DdistributionUrl="$distributionUrl" \
  "$@"

